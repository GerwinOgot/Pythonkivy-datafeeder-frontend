

<FloatLayout>:
    MDLabel:
        text: 'Ingredient Feeder'
        halign: 'center'
        pos_hint: {'top': 1}
        size_hint: (1, 0.10)
        theme_text_color: 'Primary'
        font_size: '20sp'
        bold: True
        font_style: 'H6'
        font_family: 'Inter'

    MDLabel:
        text: 'Ingredient Name:'
        halign: 'left'
        pos_hint: {'center_x': 0.63, 'center_y': 0.85}
        size_hint: (1, 0.3)
        theme_text_color: 'Primary'
        font_size: '15sp'
        font_style: 'Body1'
        font_family: 'Inter'

    MDTextField:
        hint_text: 'Enter Ingredient Name:'
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}
        size_hint: (0.75, 0.3)
        font_size: '20sp'

    MDTextField:
        hint_text: 'Enter Ingredient Type:'
        pos_hint: {'center_x': 0.5, 'center_y': 0.70}
        size_hint: (0.75, 0.3)
        font_size: '20sp'

    MDLabel:
        text: 'Ingredient Image:'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.59}
        size_hint: (1, 0.3)
        theme_text_color: 'Primary'
        font_size: '15sp'
        font_style: 'Body1'
        font_family: 'Inter'

    Button:
        text: 'Attach Ingredient Image Here'
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        size_hint: (0.8, 0.3)
        color: (8, 5, .2, 99)
        background_color: (2.5, 1, .100, 5)

    Button:
        text: 'CONFIRM'
        bold: True
        color: (8, 5, .2, 99)
        font_size: '20sp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.16}
        size_hint: (0.4, 0.07)
        background_color: (2.5, 1, .100, 5)
